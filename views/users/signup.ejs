<%- include('../layouts/header') %>
    <style>
        body {
            background-image: url(https://www.vocso.com/blog/wp-content/uploads/2022/02/eCommerce-Website-Features-1920-x-1080.jpg);
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }
    </style>

    <div class="px-4 py-3">

    </div>

    <div class="container">

        <div class="row mx-5 px-4">
            <div class="col-12 col-md-6">

            </div>

            <div class="col-12 col-md-6 px-5 py-3"
                style="background-color:rgba(240, 248, 255, 0.911); border-radius: 2em; ">
                <div class="text-center">
                    <img class="pb-2" style="width: 5em;"
                        src="https://icon-library.com/images/e-commerce-icon-png/e-commerce-icon-png-5.jpg"></img>
                    <h3 class="pb-3 fw-bold text-danger">eezi<span class="text-success">Buy</span></h3>
                </div>
                <form action="/register" method="post">
                    <div class="col-12 px-2">
                        <h4 class="mb-4 text-center">SignUp</h4>

                        <div class="mb-3">
                            <label for="text" class="form-label">Full Name</label>
                            <input type="text" placeholder="Enter your full name" pattern="[A-Za-z ]*"
                                oninvalid="setCustomValidity('Please enter alphabetic characters only')"
                                oninput="setCustomValidity('')" name="name" class="form-control" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" name="email" class="form-control" id="email" placeholder="Enter email ID"
                                required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Phone number</label>
                            <input type="number" name="phone" class="form-control" id="phone" placeholder="Enter contact number" required>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" placeholder="Enter password" id="password" required>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">ConfirmPassword</label>
                            <input type="password" name="password2" placeholder="Re-enter password" class="form-control" id="password2" required>
                        </div>

                        <% if(locals.message){%>
                            <div class="alert alert-warning text-center">
                                <%=locals.message%>
                            </div>
                            <% } %>
                                <div class="text-center mb-2">
                                    <button type="submit" class="btn btn-primary w-50">Signup</button>
                                </div>
                                <p class="text-center">Already have account? <a href="/">Login</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="px-4 py-3">
    </div>

    <%- include('../layouts/footer') %>
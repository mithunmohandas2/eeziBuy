<form action="/admin//modifyUser" method="post">
    <div class="col-12 px-5 mb-1 bg-light mt-2 py-4" style="border-radius: 2em;">
        <h5 class="text-center">Edit User</h5>
        <hr class="mx-5 my-1">

        <div class="">
            <label for="email" class="form-label pt-2 mb-0">Email address</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Enter email ID" required>
            </input>
        </div>

        <div class="">
            <label for="text" class="form-label pt-2 mb-0">Full Name</label>
            <input type="text" placeholder="Enter your full name" pattern="[A-Za-z ]*"
                oninvalid="setCustomValidity('Please enter alphabetic characters only')" oninput="setCustomValidity('')"
                name="name" class="form-control" id="name" required> </input>
        </div>

        <div class="">
            <label for="phone" class="form-label pt-2 mb-0">Phone number</label>
            <input type="number" name="phone" class="form-control" id="phone" placeholder="Enter contact number">
            </input>
        </div>

        <div class="d-flex pt-1">
            <div class="col-6">
                <label for="admin_status" class="form-label pt-2 mb-0">Admin status</label>
                <select name="admin_status" class="form-control" id="admin_status" required>
                    <option value="false">false</option>
                    <option value="true">true</option>
                </select>
            </div>
            <div class="col-6 pt-3">
                <div class="text-center mb-2">
                    <button type="submit" class="btn btn-primary mt-3">Edit User</button>
            </div>
    </div>
</form>